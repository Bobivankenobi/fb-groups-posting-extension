{
  "manifest_version": 3,
  "name": "Facebook Groups Extension",
  "version": "1.0.0",
  "permissions": ["storage", "scripting", "activeTab", "tabs"],
  "host_permissions": [
    "https://www.facebook.com/*",
    "https://facebook.com/*",
    "https://m.facebook.com/*",
    "<all_urls>"
  ],
  "action": {
    "default_title": "Popup",
    "default_popup": "index.html",
    "default_icon": "logo192.png"
  },
  "icons": {},
  "background": {
  "service_worker": "content-script/src/background.js"
},
  "content_scripts": [
    {
      "matches": ["https://www.facebook.com/*", "https://facebook.com/*", "https://m.facebook.com/*"],
      "js": ["content-script/src/main.tsx"],
      "media": []
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["assets/*"],
      "matches": ["<all_urls>"]
    }
  ]
}


